<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.journaldev.retrofitintro">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".CropImageActivity"></activity>
        <activity android:name=".ImagePickerActivity"
            android:label="Pick Image"/>
        <activity android:name=".VolleyActivity" />
        <activity android:name=".CartActivity" />
        <activity android:name=".CKLoginActivity" />
        <activity android:name=".MediaActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".NotificationsActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".TreeActivity" />
        <activity android:name=".SampleActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>